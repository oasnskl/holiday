{
    "name": "umulmrum/holiday",
    "description": "A PHP library to compute holidays. It's something :-)",
    "keywords": [
        "holiday",
        "holidays",
        "calendar",
        "date",
        "time"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Stefan Kruppa",
            "email": "stefan@umulmrum.de"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "ext-json": "*",
        "friendsofphp/php-cs-fixer": "^3.57",
        "phpunit/phpunit": "~11.1",
        "symfony/translation": "~5.4|~6.4|~7.0",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Umulmrum\\Holiday\\": ["src"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Umulmrum\\Holiday\\Test\\": ["tests"]
        }
    },
    "scripts": {
        "cs": "php vendor/bin/php-cs-fixer fix --verbose",
        "functional-tests": "php vendor/bin/phpunit --coverage-text",
        "phpstan": "php -dmemory_limit=-1 vendor/bin/phpstan"
    }
}
